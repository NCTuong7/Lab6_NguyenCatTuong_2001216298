<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Bài tập lap 6" />

        <Button
            android:id="@+id/btnBaiMau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài mẫu" />

        <Button
            android:id="@+id/btnBai1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 1" />

        <Button
            android:id="@+id/btnBai2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 2" />

        <Button
            android:id="@+id/btnBai3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 3" />

        <Button
            android:id="@+id/btnBai4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 4" />

        <Button
            android:id="@+id/btnBai5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 5" />

        <Button
            android:id="@+id/btnBai6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 6" />

        <Button
            android:id="@+id/btnBai7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>